    <% if @yelp %>
    	<% @yelp.each do |restaurant| %>
            <div class="platebackground">
                <div class="plate">
            	    <h3 class="nameRating"><%= restaurant.name %></h3>
            	    <img class="nameRating" src="<%= restaurant.rating_img_url %>">
                    <img class="restaurantPhoto" src="<%= restaurant.image_url %>">
                    

                    
                    
                    <p class="restaurantAddress">
                        <%= restaurant.location.display_address[0] %>,
                        <%= restaurant.location.display_address[1] %>
                        <br>
                        <%= (restaurant.distance / 1000).round(2) %> km
                    </p>
            	</div>
            </div>
      <% end %>
    <% end %>



<script type="text/javascript">
$(function () {
    var body = $('.background');
    var backgrounds = [
      'url(/assets/food_2.jpg)', 
      'url(/assets/rest_1.JPG)',
      'url(/assets/rest_2.jpg)'];
    var current = 0;

    function nextBackground() {
        body.css({"background": backgrounds[current = ++current % backgrounds.length],
            "background-repeat":"no-repeat",
            "background-size":"cover",
            "background-position":"fixed",
            "background-attachment":"fixed"});

        setTimeout(nextBackground, 5000);
    }
    setTimeout(nextBackground, 5000);
    body.css("background",backgrounds[0]);
});
</script>