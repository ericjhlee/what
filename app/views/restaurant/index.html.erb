<div id="restaurantBackgrounds">
    <img class="backgroundImages" src="/assets/rest_1.JPG">
    <img class="backgroundImages" src="/assets/food_2.jpg">
    <img class="backgroundImages" src="/assets/rest_2.jpg">
</div>



    <% if @yelp %>
    	<% @yelp.each do |restaurant| %>
            <div class="platebackground">
                <div class="plate">
            	    <h3 class="nameRating"><%= restaurant.name %></h3>
            	    <img class="nameRating" src="<%= restaurant.rating_img_url %>">
                    <img class="restaurantPhoto" src="<%= restaurant.image_url %>">
                    

                    
                    
                    <p class="restaurantAddress">
                        <%= restaurant.location.display_address[0] %>,
                        <%= restaurant.location.display_address[1] %>
                        <br>
                        <%= (restaurant.distance / 1000).round(2) %> km
                    </p>
            	</div>
            </div>
      <% end %>
    <% end %>



<script type="text/javascript">
$(function () {
    $('img.backgroundImages').hide();
    var dg_H = $(window).height();
    var dg_W = $(window).width();


    $('#restaurantBackgrounds').css({'height':dg_H,'width':dg_W});
    function animBackground() {
        $("#restaurantBackgrounds img.backgroundImages").first().appendTo('#restaurantBackgrounds').fadeOut(1500);
        $("#restaurantBackgrounds img").first().fadeIn(1500);
        setTimeout(animBackground, 3000);
    }
    animBackground();
    $(window).resize(function(){window.location.href=window.location.href})
});

</script>